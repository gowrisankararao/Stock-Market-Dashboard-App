<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>

</head>
<body class="bg-gradient-to-br from-gray-900 to-gray-700 text-white min-h-screen p-6 font-sans">

    <!-- Header -->
    <div class="bg-gray-800 text-white p-6 rounded-lg shadow-lg text-center">
        <h1 class="text-3xl font-bold">Dashboard</h1>
        <p class="text-lg">Welcome, <%= user.username %>!</p>
    </div>

    <!-- Registered Users Table -->
    <div class="mt-8 bg-gray-400 bg-opacity-90 p-6 rounded-lg shadow-lg text-gray-900">
        <h2 class="text-2xl font-semibold mb-4 text-center">Registered Users</h2>

        <% if (Array.isArray(users) && users.length > 0) { %>
            <div class="overflow-x-auto">
                <table class="w-full border-collapse border border-black text-center">
                    <thead>
                        <tr class="bg-gray-700 text-white">
                            <th class="border border-black p-3">ID</th>
                            <th class="border border-black p-3">Username</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr class="bg-gray-300 hover:bg-gray-400">
                                <td class="border border-black p-3"><%= user.id %></td>
                                <td class="border border-black p-3"><%= user.username %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="text-center text-red-500 font-semibold">No users found.</p>
        <% } %>
    </div>

    <!-- Logout Button -->
    <div class="mt-8 flex justify-center">
        <a href="/logout" class="bg-red-500 text-white px-6 py-3 rounded-lg shadow-md text-lg font-semibold hover:bg-red-700 transition-all inline-block">
            Logout
        </a>
    </div>

</body>
</html>
